<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!-- Splash style -->
  <style name="Theme.Splash" parent="AppTheme.Base">
    <item name="android:windowBackground">@drawable/screen</item>
    <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>
  
  <!-- Application theme -->
  <style name="AppTheme" parent="AppTheme.Base">
    <item name="android:windowActionBarOverlay">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
  </style>
  
  <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  
    <item name="android:windowAnimationStyle">@null</item>
    <item name="android:windowDisablePreview">true</item>
  </style>

  <!--Floating label text style-->
  <style name="hint_input_appearance" parent="TextAppearance.AppCompat.Small">
    <item name="android:textColor">@color/gray_text</item>
  </style>

  <!--Error label text style-->
  <style name="error_input_appearance" parent="TextAppearance.AppCompat.Small">
    <item name="android:textColor">@color/login_input_error</item>
  </style>

  <!--Input field style-->
  <style name="edit_input_appearance" parent="Theme.AppCompat.Light">
    <item name="colorControlNormal">@color/login_input_once</item>
    <item name="colorControlActivated">@color/login_input_error</item>
  </style>

  <style name="acr_dialog_theme" parent="Theme.AppCompat.Light.Dialog">
  </style>
  
</resources>